.page {
  height: 100%;
  margin: 0 auto;
  padding: 6px 12px;
  max-width: 400px;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.page--hidden {
  display: none;
}

.page__new-task {
  justify-content: flex-start;
}
